<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ListView
        android:id="@+id/responsesListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <EditText
        android:id="@+id/newResponseEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="New Response" />

    <Button
        android:id="@+id/addResponseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Response" />

    <RadioGroup
        android:id="@+id/responseTypeGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/radioSpam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spam" />
        <RadioButton
            android:id="@+id/radioAutoResponse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Auto Response" />
    </RadioGroup>
</LinearLayout>
